<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /packages/
  DirectoryIndex index.php

  # ğŸ”’ Deny access to sensitive files
  RewriteRule ^(\.env|\.git|\.htaccess|composer\.(json|lock)|config\.php)$ - [F,L]

  # ğŸ”’ Deny direct access to PHP files except index.php
  RewriteCond %{REQUEST_URI} !^/packages/index\.php$
  RewriteRule ^(.*\.php)$ - [F,L]

  # âœ… Allow existing static files (CSS, JS, images)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ğŸ” Route everything else to index.php
  RewriteRule ^ index.php [QSA,L]
</IfModule>
